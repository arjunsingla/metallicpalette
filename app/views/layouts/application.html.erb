<!DOCTYPE html>
<html>
	<head>
	  <title>Metallic Palette</title>
	  <%= stylesheet_link_tag 'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <link rel="icon" type="image/png" href="https://s3.amazonaws.com/metallicpalette/favicon-16x16.png" sizes="16x16" />
	  <link rel="icon" type="image/png" href="https://s3.amazonaws.com/metallicpalette/favicon-32x32.png" sizes="32x32" />
	
	</head>
	<body>

		<%= render 'layouts/header' %>
	
			<% flash.each do |name, msg| %>
		  		<div class="alert alert-info alert-dismissible" role="alert">
  					<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		  			<%= content_tag(:div, msg) %>
				</div>
			<% end %>
			
			<%= yield %>
		
	</body>
</html>
